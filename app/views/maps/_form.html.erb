<p>
  <%= f.label :name %><br />
  <%= f.text_field :name %>
</p>

<div id="associated_services" style="border:1px solid black;" >
  <%= f.label :services, "Service" %><br />
  <% f.fields_for :services do |builder| %>
    <p>
      <%= builder.text_field :name %>
      <%= builder.check_box :_destroy %>
      <%= builder.label :_destroy, "Remove" %>
    </p>
  <% end %>
</div>

<script type="text/javascript">
$(function() {
        $("#tabs").tabs({
            ajaxOptions: {
              error: function(xhr, status, index, anchor) {
                  $(anchor.hash).html("Couldn't load this tab.");
              }
            }
        });
});
</script>

<div id="tabs">
  <%= f.label :svgdata%><br />
  <ul>
    <li><a href="#code_editor">Code</a></li>
    <li><a href="/maps/<%=@map.id%>/visual_editor">Visual</a></li>
  </ul>

  <div id="code_editor">
    <%= f.text_area :svgdata%>
    <script type="text/javascript">
      $(document).ready(function(){
      var editor = CodeMirror.fromTextArea('map_svgdata', {
        height: "350px",
        parserfile: "parsexml.js",
        stylesheet: "/javascripts/codemirror/css/xmlcolors.css",
        path: "/javascripts/codemirror/js/",
        continuousScanning: 500,
        lineNumbers: true
        });
      });
    </script>
  </div>
</div>

<p>
  <%= f.label :width%><br />
  <%= f.text_field :width%>
</p>
<p>
  <%= f.label :height%><br />
  <%= f.text_field :height%>
</p>


